{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",

    "lib": ["ES2022"],
    "types": ["node", "electron"],

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "moduleResolution": "node",

    "outDir": "dist/electron",
    "rootDir": "electron",

    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules"]
}